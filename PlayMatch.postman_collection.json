    {
      "name": "Player Profile",
      "description": "Player profile management endpoints",
      "item": [
        {
          "name": "Create Player Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {}; try { json = pm.response.json(); } catch(e) {}",
                  "if (json && json.id) { pm.environment.set('player_profile_id', json.id); }",
                  "if (json && json.userId) { pm.environment.set('user_id', json.userId); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer"
            },
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Rahul Mehta\",\n  \"gender\": \"MALE\",\n  \"mobile\": \"9876543210\",\n  \"city\": \"Bengaluru\",\n  \"primaryRole\": \"BATTER\",\n  \"jerseySize\": \"L\",\n  \"upiId\": \"rahulm@okicici\",\n  \"codeOfConductAccepted\": true,\n  \"profilePhotoUrl\": \"https://cdn.playmatch/u/abc.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/players/profile",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "players",
                "profile"
              ]
            },
            "description": "Create a new player profile (requires bearer token)."
          },
          "response": []
        },
